<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" android:id="@+id/selectedView"
        android:clickable="true" android:padding="8dp">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:clickable="false">
            <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_person_round_full"
                    android:layout_gravity="center_vertical"
                    android:clickable="false"/>
            <TextView
                    android:text="Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:gravity="center_horizontal"
                    android:clickable="false"/>
        </LinearLayout>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_round_close_white_padding_24"
                android:id="@+id/btnDeleteSelection" android:layout_gravity="right|center"
                android:background="@android:color/transparent"
                android:clickable="false"/>
    </FrameLayout>
</LinearLayout>